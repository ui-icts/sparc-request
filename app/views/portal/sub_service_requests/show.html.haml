:javascript
  $(document).ready( function() {
    Sparc.associated_users.ready();
  });

.admin-right-dashboard
  .user-information-body
    %p
      = @user.full_name
      |
      = @user.email
    .admin-buttons
      = link_to "Return to Admin Portal", portal_admin_index_path, class: "return_link"

= render partial: 'portal/sub_service_requests/ssr_information', locals: {protocol: @protocol, sub_service_request: @sub_service_request}

.tabs.plain_class
  %ul
    %li
      = link_to t(:admin_dashboard)[:tabs][:fulfillment], "#fulfillment", class: 'fulfillment-tab'
    %li
      = link_to t(:admin_dashboard)[:tabs][:protocol_info], "#protocol", class: 'project-tab'
    %li
      = link_to t(:admin_dashboard)[:tabs][:docs], "#documents", class: 'documents-tab'
    %li
      = link_to t(:admin_dashboard)[:tabs][:related_srs], "#related_service_requests", class: 'related_service_requests-tab'
    %li
      = link_to t(:admin_dashboard)[:tabs][:users], "#associated_users", class: 'associated_users-tab'
    %li
      = link_to t(:admin_dashboard)[:tabs][:notifications], "#notifications", class: 'notifications-tab'

  #fulfillment
    = render 'fulfillment'
    
  #protocol{style: 'padding:15px;'}
    = render partial: 'portal/protocols/type_form'
    = render partial: 'portal/protocols/form', locals: {protocol: @protocol, admin: true}
      
  #documents
    = render 'portal/sub_service_requests/documents'
  #related_service_requests
    = render 'portal/sub_service_requests/related_service_requests'
  #associated_users
    = render 'portal/sub_service_requests/associated_users'
  #notifications
    = render 'portal/notifications/notifications'

= render 'cwf_building'
  


